<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".activity.MainActivity"
    tools:ignore="Overdraw">

    <Button
        android:id="@+id/main_activity_gryffindor_button"
        style="@style/style_main_activity_button_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/gryffindor"
        app:layout_constraintBottom_toTopOf="@+id/main_activity_hufflepuff_button"
        app:layout_constraintEnd_toStartOf="@id/main_activity_slytherin_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_activity_slytherin_button"
        style="@style/style_main_activity_button_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/slytherin"
        app:layout_constraintBottom_toTopOf="@id/main_activity_ravenclaw_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_activity_gryffindor_button"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/main_activity_hufflepuff_button"
        style="@style/style_main_activity_button_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/hufflepuff"
        app:layout_constraintBottom_toTopOf="@id/main_activity_spells_button"
        app:layout_constraintEnd_toStartOf="@+id/main_activity_ravenclaw_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/main_activity_gryffindor_button" />

    <Button
        android:id="@+id/main_activity_ravenclaw_button"
        style="@style/style_main_activity_button_margin_top"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:background="@drawable/ravenclaw"
        app:layout_constraintBottom_toTopOf="@id/main_activity_spells_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/main_activity_hufflepuff_button"
        app:layout_constraintTop_toBottomOf="@id/main_activity_slytherin_button" />

    <Button
        android:id="@+id/main_activity_spells_button"
        style="@style/style_main_activity_button_margin_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/spells"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_activity_ravenclaw_button" />

</androidx.constraintlayout.widget.ConstraintLayout>